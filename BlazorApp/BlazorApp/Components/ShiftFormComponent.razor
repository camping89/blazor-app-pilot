@using BlazorApp.Models
@using BlazorApp.Services
@using BlazorApp.Share.Entities
@inject ShiftApiService    ShiftApiService
@inject EmployeeApiService EmployeeApiService
@inject ClientApiService   ClientApiService

<SfDialog Width="250px" IsModal="true" Visible="false" @ref="Dialog">
    <DialogTemplates>
        <Header>@Title</Header>
        <Content>
            <EditForm id="shiftForm" Model="@Shift" OnValidSubmit="HandleValidSubmit">
                <SfTab>
                    <TabItems>
                        <TabItem>
                            <ChildContent>
                                <TabHeader Text="Shift"></TabHeader>
                            </ChildContent>
                            <ContentTemplate>
                                <DataAnnotationsValidator/>
                                <CustomFormValidator @ref="customFormValidator"></CustomFormValidator>
                                <ShiftDetailFormComponent Shift="@Shift"></ShiftDetailFormComponent>
                            </ContentTemplate>
                        </TabItem>
                        <TabItem>
                            <ChildContent>
                                <TabHeader Text="Deviation"></TabHeader>
                            </ChildContent>
                            <ContentTemplate>
                                <DeviationDetailFormComponent DeviationDto="@Shift.DeviationDto"></DeviationDetailFormComponent>
                            </ContentTemplate>
                        </TabItem>
                    </TabItems>
                </SfTab>
            </EditForm>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="Submit" IsPrimary="true" Type="ButtonType.Submit" form="shiftForm"/>
        @if (IsDisplayedDeleteButton)
        {
            <DialogButton Content="Delete" IsPrimary="false" OnClick="@OnDelete"/>
        }
        <DialogButton Content="Cancel" IsPrimary="false" OnClick="@OnCancel"/>
    </DialogButtons>
</SfDialog>